<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="weatherreport" translate="label" sortOrder="200">
            <label>Weather Report</label>
        </tab>
        <section id="api" translate="label" type="text" sortOrder="40" showInDefault="1">
            <class>separator-top</class>
            <label>API Info</label>
            <tab>weatherreport</tab>
            <resource>Bang_Weather::api_config</resource>
            <group id="config" translate="label" type="text" sortOrder="90" showInDefault="1">
                <label>API Settings</label>
                <field id="key" translate="label comment" type="text" sortOrder="20" showInDefault="1"
                       canRestore="1">
                    <label>API Key</label>
                </field>
            </group>
            <group id="city" translate="label" type="text" sortOrder="90" showInDefault="1">
                <label>Chọn tỉnh/thành phố</label>
                <field id="city1" translate="label comment" type="text" sortOrder="20" showInDefault="1"
                       canRestore="1">
                    <label>Tỉnh/Thành phố thứ 1</label>
                </field>
            </group>
        </section>
    </system>
</config>
